<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f8fcf5"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/include" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8fcf5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/p_image"
                android:layout_width="305dp"
                android:layout_height="340dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="1dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <TextView
                    android:id="@+id/p_name"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"


                    android:fontFamily="@font/gotham_book"

                    android:gravity="center"

                    android:hint="Product Name"

                    android:textColor="#000"

                    android:textSize="20dp" />

                <TextView


                    android:id="@+id/p_aval"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/p_name"
                    android:layout_weight="1"

                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"

                    android:hint="Availability"
                    android:paddingTop="10dp"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/p_disc"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignStart="@+id/p_name"
                    android:layout_below="@+id/p_name"
                    android:layout_marginTop="5dp"

                    android:layout_weight="1"

                    android:fontFamily="@font/gotham_book"

                    android:gravity="center"


                    android:hint="Description"
                    android:textColor="#000"
                    android:textSize="18dp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="35dp"


                        android:layout_alignParentTop="true"

                        android:background="@drawable/black_border"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:text="Size"
                        android:textColor="#fff" />


                    <Spinner
                        android:id="@+id/spinner_size"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"

                        android:gravity="right"
                        android:textAlignment="center"
                        android:textColor="#0000">

                    </Spinner>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:weightSum="2">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentTop="true"
                    android:layout_weight="1"

                    android:background="@drawable/black_border"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="Color"
                    android:textColor="#fff" />

                <Spinner
                    android:id="@+id/spinner_color"
                    android:layout_width="300dp"
                    android:layout_height="35dp"

                    android:layout_above="@+id/pedit"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_weight="1" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="76dp"
                    android:weightSum="5">


                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="300dp"

                        android:layout_height="35dp"

                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:background="@drawable/black_border"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:text="Original Price"
                        android:textColor="#fff"
                        android:textColorHint="#FFFF5656" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="300dp"
                        android:layout_height="35dp"


                        android:layout_above="@+id/dprice"
                        android:layout_toEndOf="@+id/textView8"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:text="Price"
                        android:textColor="#000"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="300dp"

                        android:layout_height="35dp"

                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView8"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/black_border"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:text="Discount"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dprice"
                        android:layout_width="300dp"
                        android:layout_height="35dp"

                        android:layout_alignTop="@+id/textView7"


                        android:layout_toEndOf="@+id/textView7"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:hint="N/A"
                        android:textColor="#000"
                        android:textSize="18sp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/qty"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_border"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="Quantity"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/pedit"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textView"
                    android:layout_toEndOf="@+id/textView"
                    android:gravity="center"
                    android:hint="1"
                    android:inputType="number"
                    android:text="1" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pbtn"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="181dp"
                    android:background="@drawable/black_border"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="ADD TO CART"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffff" />
            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>